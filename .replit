modules = ["nodejs-20", "rust-stable"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Battlesnake Server"

[[workflows.workflow]]
name = "Battlesnake Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cargo run"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "vm"
run = ["cargo", "run", "--release"]
